<idea-plugin version="2">
    <id>org.ocaml.ide</id>
    <name>Ocaml</name>
    <version>1.0</version>

    <description><![CDATA[
      Ocaml language plugin
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145"/>


    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <application-components>
        <component>
            <interface-class>org.ocaml.ide.components.MerlinServiceComponent</interface-class>
            <implementation-class>org.ocaml.ide.components.impl.MerlinServiceComponentImpl</implementation-class>
        </component>
        <component>
            <implementation-class>org.ocaml.ide.format.OCamlDocumentManager</implementation-class>
        </component>
        <component>
            <implementation-class>org.ocaml.ide.settings.OCamlPluginConfig</implementation-class>
        </component>
    </application-components>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->

        <applicationConfigurable groupId="language" displayName="OCaml" id="preference.OCamlPluginConfigurable"
                                 instance="org.ocaml.ide.settings.OCamlPluginConfigurable"/>

        <fileTypeFactory implementation="org.ocaml.lang.MlFileTypeFactory"/>
        <lang.parserDefinition language="Ocaml" implementationClass="org.ocaml.lang.parser.OcamlParserDefinition"/>

        <lang.syntaxHighlighterFactory key="Ocaml"
                                       implementationClass="org.ocaml.ide.highlighter.OcamlSyntaxHighlighterFactory"/>
        <externalAnnotator language="Ocaml"
                           implementationClass="org.ocaml.ide.highlighter.MerlinErrorHighlightingAnnotator"/>

        <colorSettingsPage implementation="org.ocaml.ide.colorscheme.OcamlColorSettingsPage"/>
        <completion.contributor language="Ocaml"
                                implementationClass="org.ocaml.ide.completion.OcamlCompletionContributor"/>
        <lang.commenter language="Ocaml" implementationClass="org.ocaml.ide.commenter.OcamlCommenter"/>


        <fileTypeFactory implementation="org.ocaml.ide.mli.MliFileTypeFactory"/>
        <lang.syntaxHighlighterFactory key="Ocaml Interface"
                                       implementationClass="org.ocaml.ide.highlighter.OcamlSyntaxHighlighterFactory"/>

        <!-- Projects -->
        <moduleType id="OcamlModuleType" implementationClass="org.ocaml.ide.project.OcamlModuleType"/>
        <moduleBuilder builderClass="org.ocaml.ide.project.OcamlModuleBuilder"/>

        <!-- Run configurations -->
        <configurationType implementation="org.ocaml.ide.runconfig.OcamlRunConfigurationType"/>
        <programRunner id="ocamlRunner" implementation="org.ocaml.ide.runconfig.OcamlRunner"/>

        <lang.findUsagesProvider language="Ocaml"
                                 implementationClass="org.ocaml.ide.usages.OcamlFindUsagesProvider"/>
    </extensions>

    <actions>
        <action id="ocaml.refmt" class="org.ocaml.ide.format.OCamlFormatAction" text="Reformat OCaml code">
            <add-to-group group-id="CodeFormatGroup" anchor="after" relative-to-action="ReformatCode"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt shift R"/>
        </action>
    </actions>

</idea-plugin>